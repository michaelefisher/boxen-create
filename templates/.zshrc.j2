function ssh-downloads() {
	if [[ -f ${HOME}/Downloads/${2} ]]; then
		echo -n "Copying file to ${1} at location /home/michael/Downloads/${2}"
		scp -r ${HOME}/Downloads/${2} ${1}:/home/michael/Downloads/${2}
	fi
}

